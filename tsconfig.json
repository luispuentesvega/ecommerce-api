{
  "compilerOptions": {
    "module": "commonjs", // how to import and export
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es6", // which JS version are you using
    "noImplicitAny": true, // block if you don't define the type of parameter
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "types": ["reflect-metadata", "node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "index.d.ts"]
}
