{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "index.d.ts"]
}
